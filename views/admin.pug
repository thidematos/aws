doctype html
html(lang="pt-br")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title O Coliseu - Projetos
        link(rel="shortcut icon", href="./../assets/favicon.ico", type="image/x-icon")
        link(rel="stylesheet", href="./../styles/style.css")
        script(type="module", defer, src="./../js/admin.js") 
    body.flex.flex-col.justify-center.items-center.min-h-screen.w-screen.bg-sixty(class="xl:gap-5")
        header.flex.flex-row.justify-center.items-center.w-full.gap-4(class="h-[15vh]") 
            img.drop-shadow-lg(src="./../assets/logo.png", alt="", class="w-[30%] md:w-[15%] xl:w-[10%]")
            div.flex.flex-col.justify-center.items-center
                h1.font-bodoni.font-bold.text-ten.text-3xl.drop-shadow-lg(class="md:text-4xl") O Coliseu
                h2.font-garamond.text-contrast.text-lg.drop-shadow-lg(class="md:text-xl") D. E. Salvino Mármores ME.
        main.flex.flex-col.justify-center.items.center(class="w-[80%] md:w-[50%] xl:w-[25%]")
            form.form.flex.flex-col.justify-center.items-center.bg-white.p-8.gap-6.shadow-2xl.font-garamond.tracking-wider
                div.flex.flex-col.justify-center.items-start.gap-2                   
                    label.text-ten.font-bold.text-xl(for="form__input-user") Usuário
                    input#form__input-user.p-2.border.border-solid.border-contrast.shadow-lg.font-montserrat(type="text", name="", placeholder="Insira seu usuário", class="border-gray-500/75 placeholder:font-garamond")
                div.flex.flex-col.justify-center.items-start.gap-2
                    label.text-ten.font-bold.text-xl(for="form__input-password", class="") Senha
                    input#form__input-password.p-2.border.border-solid.border-contrast.shadow-lg.font-montserrat(type="password", name="", placeholder="*******", class="border-gray-500/75 placeholder:font-garamond")
                button.form__btn.bg-sixty.px-4.py-3.text-ten.font-bold.text-2xl.shadow-xl(class="hover:underline decoration-2") Acessar
                