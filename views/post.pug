doctype html
html(lang="pt-br")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title O Coliseu - #{post.title}
        link(rel="shortcut icon", href="./../../assets/favicon.ico", type="image/x-icon")
        link(rel="stylesheet", href="./../../styles/style.css")
        script(defer, src="./../../js/patchPost.js") 
    body.flex.flex-col.justify-start.items-center.min-h-screen.w-screen.bg-sixty(class="xl:gap-5")
        header.flex.flex-row.justify-center.items-center.w-full.gap-4(class="h-[15vh]") 
            img.drop-shadow-lg(src="./../../assets/logo.png", alt="", class="w-[30%] md:w-[15%] xl:w-[10%]")
            div.flex.flex-col.justify-center.items-center
                h1.font-bodoni.font-bold.text-ten.text-3xl.drop-shadow-lg(class="md:text-4xl") O Coliseu
                h2.font-garamond.text-contrast.text-lg.drop-shadow-lg(class="md:text-xl") D. E. Salvino Mármores ME.
        nav.flex.flex-row.justify-around.items-center.w-full.py-1.px-5
            div.flex.flex-col.justify-center.items-center(class="w-[40%]")
                img.userId.rounded-full.border-2.border-solid.border-ten.shadow-lg(src="./../../assets/" + user.photo , alt="", data-userId=user._id, class="w-[60%]")
                h3.font-garamond.text-ten.text-2xl.font-bold #{user.name}
            div.flex.flex-col.justify-center.items-stretch.gap-5(class="w-[60%]")
                a(href="/admin/novo-projeto").text-center.bg-white.font-garamond.text-ten.font-bold.tracking-wider.py-2.shadow-md.drop-shadow-lg NOVO PROJETO
                a(href="/admin/logout").text-center.bg-white.font-garamond.text-ten.font-bold.tracking-wider.py-2.shadow-md.drop-shadow-lg SAIR
        main.main.flex.flex-col.justify-center.items-center.w-full.py-8.gap-6  
            h3.id.font-garamond.text-ten.text-3xl.font-bold.text-center(data-id=post._id)= 'Atualizar'  
            form.form.flex.flex-col.justify-center.items-center.bg-white.p-6.font-garamond.gap-4(action=`#`, enctype="multipart/form-data", class="w-[85%]")
                div.flex.flex-col.justify-center.items-start.gap-1
                    label.text-ten.font-bold.text-xl(for="form__input-title") Título
                    input#form__input-title.p-2.text-sm.text-contrast.font-montserrat.border.border-solid.shadow-md(class="border-gray-400/75", type="text", name="title", placeholder=`${post.title}`)
                div.flex.flex-col.justify-center.items-start.gap-1
                    label.text-ten.font-bold.text-xl(for="form__input-material") Material
                    input#form__input-material.p-2.text-sm.text-contrast.font-montserrat.border.border-solid.shadow-md(class="border-gray-400/75", type="text", name="material", placeholder=`${post.material}`) 
                div.flex.flex-col.justify-center.items-start.gap-1
                    label.text-ten.font-bold.text-xl(for="form__input-local") Local
                    input#form__input-local.p-2.text-sm.text-contrast.font-montserrat.border.border-solid.shadow-md(class="border-gray-500/75", type="text", name="local", placeholder=`${post.local}`)
                div.flex.flex-col.justify-center.items-center.gap-3
                    label.bg-sixty.font-garamond.text-contrast.font-bold.tracking-wider.p-3.shadow-md.drop-shadow-lg.text-2xl.underline.decoration-1.underline-offset-2(for="form__input-img") Imagem
                    input#form__input-img.hidden(accept="image/*", type="file", name="img")
                    div.flex.flex-col.justify-center.items-center.gap-1
                        img.oldImage.border.border-solid.border-ten(src=`./../../uploads/${post.imgs[0]}`, alt="", class="w-[90%]")
                        p.imageName.text-contrast= post.imgs[0]
                div.flex.flex-col.justify-center.items-start.gap-1
                    label.text-ten.font-bold.text-xl(for="form__input-description") Descrição
                    textarea#form__input-description.p-2.text-sm.text-contrast.font-montserrat.border.border-solid.shadow-md(class="border-gray-500/75", type="text", name="description",cols="30", rows="5")= post.description
                div.flex.flex-col.justify-center.items-center.font-garamond.text-ten.font-bold
                    h5= `Criado por ` + post.user.name
                    h5.text-contrast= `${`${post.createdAt.getDate()}`.padStart(2, '0')}/${`${post.createdAt.getMonth() + 1}`.padStart(2, '0')}/${post.createdAt.getFullYear()}`
                input#form__submit.bg-sixty.font-garamond.text-ten.font-bold.tracking-wider.p-3.shadow-md.drop-shadow-lg.text-xl(type="submit", value="ATUALIZAR")
                a.py-5.font-garamond.text-lg.text-ten.underline.decoration-2.underline.offset-1(href="/admin/dashboard") Voltar à Visão Geral 
                      